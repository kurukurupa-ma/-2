<div class="book-wrap">
  <body>
    <p classid="notice"></p>
     <h1 class="headline">Books</h1>
     <table>
       <thead>
        <tr>
         <th>Title</th>
         <th>Body</th>
         <th colspan="3"></th>
        </tr>
       </thead>
       <% @books.each do |book| %>
       <tbody>
        <tr>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td><%= link_to "Show" ,book_path(book.id) %></td>
          <p class="hover-Show"></p>
         <td><%= link_to "Edit" ,edit_book_path(book.id) %></td>
         <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        </tr>
     <% end %>
       </tbody>
     </table>
     
     <h2 class="headline">New book</h2>
    
  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
   <ul>
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>  
   </ul>
   <% end %>
　
   <%= form_with model: @book, url: "/books", method: :post  do |f| %>

   <label>Title</label>
   <br>
   <%= f.text_field :title %>
   <br>
   <label>Body</label>
   <br>
   <%= f.text_area :body %>
  
  <br>
   <%= f.submit 'Create Book' %>
   <% end %>
     
     
  
   </body>
 </div>